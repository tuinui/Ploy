<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item>
    </style>


    <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="PloyButtonTransparentWhiteBorder">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/background_button_transparent_white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="PloyButtonTransparentGrayBorder">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:background">@drawable/background_button_transparent_gray</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>


    <style name="DialogAnimation" parent="AppTheme">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextInputLayout.White" parent="AppTheme.Light">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHighlight">@android:color/white</item>
    </style>

    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.TextErrorAppearance" parent="TextAppearance.Design.Error">
        <!-- Error message appearance here -->
    </style>

    <style name="RatingBar.Orange" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray_edittext_header</item>
        <item name="colorControlActivated">@color/orange_stars</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:minWidth">16dp</item>
    </style>

    <style name="RatingBar.White" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray_edittext_header</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:minWidth">16dp</item>
    </style>
</resources>
