<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background_light"
    android:orientation="vertical">

    <include layout="@layout/view_main_appbar" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swiperefreshlayout_ployee_account_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edittext_ployee_account_main_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:hint="@string/First_Name_asterisk"
                            android:inputType="textPersonName"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_floatingLabelText="@string/First_Name_asterisk"
                            app:met_floatingLabelTextColor="@color/colorPrimary" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edittext_ployee_account_main_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:hint="@string/Last_Name_asterisk"
                            android:inputType="textPersonName"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_floatingLabelText="@string/Last_Name_asterisk"
                            app:met_floatingLabelTextColor="@color/colorPrimary" />


                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edittext_ployee_account_main_birthday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:hint="@string/Birthday"
                            android:inputType="date"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_floatingLabelText="@string/Birthday"
                            app:met_floatingLabelTextColor="@color/colorPrimary" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edittext_ployee_account_main_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:hint="@string/Email_Address_asterisk"
                            android:inputType="textPersonName"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_floatingLabelText="@string/Email_Address_asterisk"
                            app:met_floatingLabelTextColor="@color/colorPrimary" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edittext_ployee_account_main_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="16dp"
                            android:hint="@string/Phone_asterisk"
                            android:inputType="phone"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabelTextColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_floatingLabelText="@string/Phone_asterisk"
                       />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edittext_ployee_account_main_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:hint="@string/Change_password"
                            android:inputType="textPassword"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabelTextColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_floatingLabelText="@string/Change_password"/>


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/loginbutton_ployee_account_main_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/If_you_are_offering_a_service_your_email_and_or_phone_number_will_be_available_to_other_members_as_means_to_contact_you"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>