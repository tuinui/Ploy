<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardElevation="1dp"
    app:cardCornerRadius="1dp"
    app:contentPadding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.nos.ploy.custom.view.ImageViewWithRatio
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/image_happy_person_137dp"
            app:ratioHeight="3"
            app:ratioWidth="4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                android:text="Adam levine(31)"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                android:text="Adam levine(31)"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="4dp"
                android:text="Description of experience and blahblahblahblahblahblahb"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <android.support.v7.widget.ButtonBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <android.support.v7.widget.AppCompatRatingBar
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:numStars="5"
                    android:layout_height="wrap_content"
                    android:rating="3.2"
                    android:stepSize="0.1"
                    android:layout_marginRight="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="4.5/5" />

                <com.nos.ploy.custom.view.TextViewDrawableSize
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_format_list_bulleted_gray_24dp"
                    android:gravity="center_vertical"
                    android:text="19"
                    app:compoundDrawableHeight="16dp"
                    app:compoundDrawableWidth="16dp" />

            </android.support.v7.widget.ButtonBarLayout>

            <android.support.v7.widget.ButtonBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.nos.ploy.custom.view.TextViewDrawableSize
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1
                    "
                    android:drawableLeft="@drawable/ic_more_horiz_black_24dp"
                    android:gravity="center_vertical"
                    android:text="$300/h"
                    app:compoundDrawableHeight="16dp"
                    app:compoundDrawableWidth="16dp" />

                <com.nos.ploy.custom.view.TextViewDrawableSize
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_pin_drop_gray_24dp"
                    android:gravity="center_vertical"
                    android:text="$300/h"
                    app:compoundDrawableHeight="16dp"
                    app:compoundDrawableWidth="16dp" />


            </android.support.v7.widget.ButtonBarLayout>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>