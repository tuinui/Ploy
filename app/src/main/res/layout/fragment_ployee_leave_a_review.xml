<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_main_appbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageview_ployee_leave_review_profile_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/ic_circle_profile_120dp" />

                <TextView
                    android:id="@+id/textview_ployee_leave_review_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:text="Guest" />

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="8dp">


                <TextView
                    android:id="@+id/textview_ployee_leave_review_competence_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_row="0"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="@string/Competence" />

                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/ratingbar_ployee_leave_review_competence"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:layout_gravity="left"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_row="0"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:theme="@style/RatingBar.Orange"
                    tools:rating="3.2" />


                <TextView
                    android:id="@+id/textview_ployee_leave_review_punctuality_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_marginTop="8dp"
                    android:layout_row="1"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="@string/Punctuality" />

                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/ratingbar_ployee_leave_review_punctuality"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:layout_gravity="left"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_row="1"
                    android:isIndicator="false"
                    android:layout_margin="8dp"
                    android:theme="@style/RatingBar.Orange"
                    tools:numStars="5"
                    tools:rating="3.2"
                    tools:stepSize="0.1" />


                <TextView
                    android:id="@+id/textview_ployee_leave_review_politeness_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_marginTop="8dp"
                    android:layout_row="2"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="@string/Politeness" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_marginTop="8dp"
                    android:layout_row="3"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Communication" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="@string/Professionalism" />

                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/ratingbar_ployee_leave_review_professionalism"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_row="4"
                    android:isIndicator="false"
                    android:theme="@style/RatingBar.Orange"
                    tools:numStars="5"
                    tools:rating="3.2"
                    tools:stepSize="0.1" />

                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/ratingbar_ployee_leave_review_communication"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_row="3"
                    android:isIndicator="false"
                    android:theme="@style/RatingBar.Orange"
                    tools:numStars="5"
                    tools:rating="3.2"
                    tools:stepSize="0.1" />

                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/ratingbar_ployee_leave_review_politeness"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_row="2"
                    android:isIndicator="false"
                    android:layout_margin="8dp"
                    android:theme="@style/RatingBar.Orange"
                    tools:numStars="5"
                    tools:rating="3.2"
                    tools:stepSize="0.1" />


            </GridLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edittext_ployee_leave_a_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="@string/Tell_others_about_this_person"
                android:inputType="textMultiLine"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelText="@string/Tell_others_about_this_person" />


            <Button
                android:id="@+id/button_ployee_leave_a_review_post"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:minHeight="56dp"
                android:text="Post"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>